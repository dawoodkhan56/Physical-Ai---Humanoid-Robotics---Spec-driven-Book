{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES2017"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "typescript-deno-plugin",
        "enable": false
      }
    ]
  },
  "include": [
    "src/**/*",
    "docusaurus.config.js",
    "sidebars.js"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".docusaurus"
  ]
}